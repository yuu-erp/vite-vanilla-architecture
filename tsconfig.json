{
  "compilerOptions": {
    "target": "ES6", // Hoặc ES5, nhưng ES6 hoặc cao hơn là cần thiết cho decorators
    "module": "nodenext", // Sử dụng ES Modules
    "experimentalDecorators": true, // Bật decorator
    "emitDecoratorMetadata": true, // Bật metadata reflection
    "strict": true, // Bật strict mode để giúp mã nguồn an toàn hơn
    "esModuleInterop": true, // Đảm bảo khả năng tương thích giữa ES modules và CommonJS
    "skipLibCheck": true, // (Tùy chọn) Giúp tăng tốc quá trình biên dịch nếu không cần kiểm tra thư viện
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"]
}
