{
  "compilerOptions": {
    "target": "ES2023", // Modern JavaScript support
    "module": "esnext", // Use CommonJS module system
    "moduleResolution": "node", // Resolve modules like Node.js
    "lib": ["dom", "esnext", "WebWorker"],

    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for source files
    "allowJs": true, // Allow JavaScript files
    "checkJs": true, // Type-check JavaScript files
    "noEmit": false, // Allow compilation output
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "vite-env.d.ts"], // Include all files in 'src'
  "exclude": ["node_modules"] // Exclude node_modules folder
}
